{
    "version": 2,
    "builds": [
        {
            "src": "apps/dashboard/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "apps/dashboard/dist"
            }
        }
    ],
    "env": {
        // Add your environment variables in the Vercel dashboard
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "ALLOWALL"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "frame-ancestors *"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}