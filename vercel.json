{
    "version": 2,
    "builds": [
        {
            "src": "apps/dashboard/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "apps/dashboard/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/apps/dashboard/dist/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "ALLOWALL"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "frame-ancestors *"
                }
            ]
        }
    ]
}